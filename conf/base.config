params {
  
  //Default steps
  skipMergeLanes = false
  saveUnaligned = false
  skipPostQC = true
  skipMarkDup = false
  skipHTSeqCount = false
  skipFeatureCounts = false
  skipMapping = false
  skipSalmon = false
  skipTrimGalore = false
  skipSortMeRna = false
  skipMultiQC = false
  skipGATK4_HC = true
  skipGATK4_BQSR = true

  //Global settings
  fastq_path = ''
  out_dir = ''
  gencode = false

  //Resources  
  genome_config = 'resources/test_run_full.config'
  rRNA_database_manifest = 'RNASeq-NF/resources/sortmerna-db-default.txt'

  //Library strandedness 
  stranded = false
  revstranded = true
  singleEnd = false
  unstranded = false

  //HTSeq count settings
  hts_count_type = 'gene_id'
  count.toolOptions = '-m union -r pos'
  norm_rpkm = true

  //featureCounts settings
  fc.toolOptions = '-p'
  fc_extra_attributes = 'gene_name'
  fc_group_features = 'gene_id'
  fc_count_type = 'exon'
  fc_group_features_type = 'gene_biotype'

  //TrimGalore settings
  trimgalore.toolOptions = '--fastqc'

  //Sambamba settings
  markdup.toolOptions = '--overflow-list-size=2000000'
  sambambamarkdup.mem = '32G'

  //STAR settings
  star.toolOptions = ''

  //Post-mapping QC
  preseq.toolOptions = "-v -B -D"

  //GATK4 / Picard settings
  splitintervals.toolOptions = '-SCATTER_COUNT 100 --UNIQUE true -M BALANCING_WITHOUT_INTERVAL_SUBDIVISION_WITH_OVERFLOW'
  haplotypecaller.toolOptions = '--standard-min-confidence-threshold-for-calling 20.0 --dont-use-soft-clipped-bases'
  variantfiltration.toolOptions = '--cluster-window-size 35 --cluster-size 3'
  baserecalibrator.toolOptions = ''
  mergevcfs.toolOptions = ''
  mergebams.toolOptions = ''
  splitintervals.mem = '12G'
  baserecalibrator.mem = '9G'
  gatherbaserecalibrator.mem = '6G'
  applybqsr.mem = '9G'
  haplotypecaller.mem = '25G'
  mergevcf.mem = '14G'
  variantfiltration.mem = '10
  mergebams.mem = '5G'

  //MultiQC settings
  multiqc.optional = '--interactive'
  multiqc.mem = '4G'


  //Reference defaults
  star_index = false
  transcripts_fasta = false
  genome_gtf = false
  genome_bed = false
  genome_fasta = false
  salmon_index = false
  genome_known_sites = false
  scatter_interval_list = false
  gene_len = false

}





